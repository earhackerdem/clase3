[mysqld]
# =============================================================================
# MySQL 8.4 Configuration for Development
# Optimized for Laravel with Performance Monitoring
# =============================================================================

# ------------------------------------------------------------------------------
# General Settings
# ------------------------------------------------------------------------------
# Note: default_authentication_plugin is deprecated in MySQL 8.0+ and removed in 8.4
# Note: skip-character-set-client-handshake is also removed in MySQL 8.4
# Authentication policy is now set via command line in docker-compose.yaml
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# ------------------------------------------------------------------------------
# Networking
# ------------------------------------------------------------------------------
bind-address = 0.0.0.0
port = 3306
max_connections = 200
max_connect_errors = 1000

# ------------------------------------------------------------------------------
# Slow Query Log Configuration
# ------------------------------------------------------------------------------
# Enable slow query logging for queries taking more than 1 second
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 1.0

# Log queries that don't use indexes (helpful for optimization)
log_queries_not_using_indexes = 1

# Limit the rate of queries not using indexes to avoid log flooding
log_throttle_queries_not_using_indexes = 10

# Log administrative statements (ALTER, OPTIMIZE, etc.)
log_slow_admin_statements = 1

# Minimum number of rows examined for slow query log
min_examined_row_limit = 100

# ------------------------------------------------------------------------------
# General Query Log (disabled by default, enable for debugging)
# ------------------------------------------------------------------------------
general_log = 0
general_log_file = /var/log/mysql/mysql-general.log

# ------------------------------------------------------------------------------
# Error Log
# ------------------------------------------------------------------------------
log_error = /var/log/mysql/mysql-error.log
log_error_verbosity = 2

# ------------------------------------------------------------------------------
# Performance Schema (for advanced query analysis)
# ------------------------------------------------------------------------------
performance_schema = ON
performance-schema-instrument = 'stage/%=ON'
performance-schema-consumer-events-stages-current = ON
performance-schema-consumer-events-stages-history = ON
performance-schema-consumer-events-stages-history-long = ON

# Enable statement instrumentation
performance-schema-instrument = 'statement/%=ON'
performance-schema-consumer-events-statements-current = ON
performance-schema-consumer-events-statements-history = ON
performance-schema-consumer-events-statements-history-long = ON

# ------------------------------------------------------------------------------
# InnoDB Settings (Optimized for Development)
# ------------------------------------------------------------------------------
# Buffer pool size (adjust based on available RAM - 50-70% of system RAM for production)
innodb_buffer_pool_size = 256M
innodb_buffer_pool_instances = 1

# Log file configuration
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M

# Flush settings (1 = safest, 2 = better performance in dev)
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# File per table (recommended)
innodb_file_per_table = 1

# IO capacity (adjust based on storage type - SSD can handle higher)
innodb_io_capacity = 200
innodb_io_capacity_max = 400

# ------------------------------------------------------------------------------
# Query Cache (Deprecated in MySQL 8.0+, but kept for reference)
# ------------------------------------------------------------------------------
# Note: Query cache has been removed in MySQL 8.0
# For better performance, rely on application-level caching (Redis)

# ------------------------------------------------------------------------------
# Temporary Tables
# ------------------------------------------------------------------------------
tmp_table_size = 64M
max_heap_table_size = 64M

# ------------------------------------------------------------------------------
# MyISAM Settings (for temporary tables)
# ------------------------------------------------------------------------------
key_buffer_size = 32M
myisam_sort_buffer_size = 8M

# ------------------------------------------------------------------------------
# Thread Settings
# ------------------------------------------------------------------------------
thread_cache_size = 50
thread_stack = 256K

# ------------------------------------------------------------------------------
# Table Settings
# ------------------------------------------------------------------------------
table_open_cache = 2000
table_definition_cache = 1000

# ------------------------------------------------------------------------------
# Binary Logging (disabled in development for better performance)
# ------------------------------------------------------------------------------
# Enable in production for replication and point-in-time recovery
skip-log-bin

# ------------------------------------------------------------------------------
# SQL Mode
# ------------------------------------------------------------------------------
# Strict mode for better data integrity
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# ------------------------------------------------------------------------------
# Timeouts
# ------------------------------------------------------------------------------
wait_timeout = 600
interactive_timeout = 600
connect_timeout = 10

# ------------------------------------------------------------------------------
# Timezone
# ------------------------------------------------------------------------------
default_time_zone = '+00:00'

[client]
port = 3306
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4

[mysqldump]
quick
quote-names
max_allowed_packet = 64M
